# order_processing.py

# Define a variable for the order amount
order_amount = 150

# Function to apply a discount if the order amount is greater than $100
def apply_discount(order_amount):
    if order_amount > 100:
        return order_amount * 0.9  # Apply a 10% discount
    return order_amount

# Calculate the final price for the example order
final_price = apply_discount(order_amount)

# Print the final price after applying the discount
print(f"Final price after discount: ${final_price:.2f}")
