# sales_report.py

# Define a list of sales amounts
sales = [200, 600, 150, 800, 300]

# Function to generate a sales report
def generate_report(sales):
    total_sales = 0
    for sale in sales:
        if sale > 500:
            print(f"Sale amount: ${sale:.2f} (Highlighted: Over $500)")
        else:
            print(f"Sale amount: ${sale:.2f}")
        total_sales += sale
    print(f"Total sales for the month: ${total_sales:.2f}")

# Call the function to generate a report for the example sales list
generate_report(sales)
