# inventory_management.py

# Define a list of items with their quantities
inventory = [('item1', 10), ('item2', 0), ('item3', 5)]

# Function to check inventory and print a message if any item is out of stock
def check_inventory(inventory):
    for item, quantity in inventory:
        if quantity == 0:
            print(f"{item} is out of stock.")
        else:
            print(f"{item} is in stock with {quantity} units.")

# Iterate over the list and check the inventory
check_inventory(inventory)
